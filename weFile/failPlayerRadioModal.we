<template>
    <div>
        <div id="dialog" class="dialog" id="dialog1">
            <div class="dialog-backdrop"></div>
            <div class="dialog-content">
                <scroller class="radio_list">
                    <div title="picker module">
                        <div class="titlediv">
                            <text class="Title">落败的玩家是：</text>
                            <text class="failedplayer">{{failedPlayer}}</text>
                        </div>
                        <!-- 应该也可以加button组件吧？这块可以后面再加 -->
                        <text class="radiobtn" type="default" size="middle" value={{Selectbtn}} onclick="pick"></text>
                        <div style="align-items: center;margin-top: 20px;">
                            <wxc-button type="primary" size="middle" value="确定" onclick="startPunish"></wxc-button>
                        </div>
                    </div>
                </scroller>
            </div>
        </div>
