</template>

<script>
    var dom = require('@weex-module/dom')
    module.exports = {
        data: {
            index: 0,
            Selectbtn: "请选择",
            currentPlayer:null,
            selectPlayer:null,
            failedPlayer:"",
            btn:"选择",
        },
        methods: {
            pick: function() {
                var picker = require('@weex-module/picker');
                var items = new Array('玩家'+this.current_player,'玩家'+this.select_player);
                var self = this;
                picker.pick({
                    'items':items,
                    'index':self.index
                },function (ret) {
                    var result = ret.result;
                    if(result == 'success')
                    {
                        self.failedPlayer = items[ret.data];
                        self.index = ret.data;
                    }
                });
            },
            startPunish: function() {
                this._parent.$emit("startPunish",{selectedPlayer:this.failedPlayer});
            }
        }
    }
</script>
